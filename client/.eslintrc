{
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
		"sourceType": "module",
		"parserOptions": {
			"ecmaFeatures": {
				"jsx": true
			}
		}
    },
    "parser": "babel-eslint",
    "env": {
        "es6":     true,
        "browser": true,
        "node":    true,
        "mocha":   true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
		"strict":             [ 1, "safe" ],
        "no-debugger":        1,
        "brace-style": [
            1,
            "1tbs",
            { "allowSingleLine": true }
        ],
        "no-trailing-spaces": 1,
        "keyword-spacing":    1,
        "space-before-function-paren": [
            1,
            "never"
        ],
        "spaced-comment":     [ 1, "always" ],
        "vars-on-top":        1,
        "no-undef":           1,
        "no-undefined":       1,
        "comma-dangle":       [ 1, "never" ],
        "quotes":             [ 1, "single" ],
        "guard-for-in":       1,
        "no-eval":            1,
        "no-with":            1,
        "valid-typeof":       1,
        "no-unused-vars":     1,
        "no-continue":        1,
        "no-extra-semi":      1,
        "no-unreachable":     1,
        "no-unused-expressions": 1,
        "no-mixed-spaces-and-tabs": 1,
        "react/prefer-es6-class": 1,
        "no-console": 0
    }
}
